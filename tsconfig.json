{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "module": "es2020",
    "moduleResolution": "Node",
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2021",
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*.js"
  ]
}